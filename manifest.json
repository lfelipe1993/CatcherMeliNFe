{
  "manifest_version": 3,
  "name": "CatcherMeliNFe",
  "description": "Pegar dados fiscais dos pedidos no Mercado Livre.",
  "version": "0.0.4",
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
},

  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "scripting", "tabs"],
  "host_permissions": [
    "http://www.mercadolivre.com.br/*",
    "https://www.mercadolivre.com.br/*"
  ]
}
